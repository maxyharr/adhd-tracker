<p id="notice"><%= notice %></p>

<h1>Listing Medications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Dosages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.name %></td>
        <td><%= medication.category %></td>
        <td>
          <%- if medication.dosages.size > 0 %>
            [<% medication.dosages.each do |dosage| %>
              <%= "#{dosage.value} #{dosage.unit}, " %>
            <% end %>]
          <%- else %>
            No dosages
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Destroy', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

