      <h2><%= pluralize(@medication.errors.count, "error") %> prohibited this medication from being saved:</h2>

      <ul>
      <% @medication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select(:category) do %>
      <%= content_tag(:option, "Stimulants") %>
      <%= content_tag(:option, "Non-Stimulants") %>
      <%= content_tag(:option, "Antidepressants") %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
